{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Virtual Machine"
      }
    },
    "KeyVaultResourceID": {
      "type": "string",
      "defaultvalue": "/subscriptions/98a2d751-10a7-4f96-aea1-3aaa8a91ead1/resourceGroups/diskencryptiontst/providers/Microsoft.KeyVault/vaults/DiskEncryptionKeyVault",
      "metadata": {
        "Description": "ResourceID of the KeyVault to place the volume encryption key"
      }
    },
    "SecretUrl": {
       "type": "string",
       "metadata": {
          "Description": "URL of the KeyVault to place the volume encryption key"
       }
    },
    "KeyEncryptionKeyURL": {
       "type": "string",
       "metadata": {
          "Description": "URL of the KeyEncryptionKey used to encrypt the volume encryption key"
        }
    },
  },
  "variables": {
    "location": "West Us",
 	"extensionName": "ADETestExtension",
  },
  "resources": [
	{
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines/extensions',  parameters('vmName'), variables('extensionName'))]"
      ],
      "properties": {
        "storageProfile": {
          "osDisk": {
		    "name": "osdisk",
            "encryptionSettings": {
              "diskEncryptionKey": {
                "sourceVault": {
                  "id": "[parameters('KeyVaultResourceID')]"
                },
                "secretUrl": "[parameters('SecretUrl')]"
              },
              "keyEncryptionKey":
              {
                "sourceVault": {
                  "id": "[parameters('KeyVaultResourceID')]"
                },
                "keyUrl": "[parameters('KeyEncryptionKeyURL')]"
              }          
           }
          }
        }
      }
    }
  ]
}